[logging]
 default = FILE:/var/log/krb5libs.log
 kdc = FILE:/var/log/krb5kdc.log
 admin_server = FILE:/var/log/kadmind.log

[libdefaults]
 default_realm = {{ realm }}
 dns_lookup_realm = false
 dns_lookup_kdc = false
 ticket_lifetime = 24h
 renew_lifetime = 7d
 forwardable = true

[realms]
{{ realm }} = {
{% for nameserver in name_server %}
 kdc = {{ nameserver }}
{% endfor %}
}

[domain_realm]
{{ realm|lower }} = {{ realm }}
.{{ realm|lower }} = {{ realm }}
